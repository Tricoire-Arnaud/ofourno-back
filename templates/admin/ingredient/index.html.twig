{% extends 'base.html.twig' %}

{% block title %}Gérer les ingrédients{% endblock %}

{% block content %}
    <h1>Gérer les ingrédients</h1>

    <a href="{{ path('admin_ingredients_new') }}" class="btn btn-primary mb-3">Ajouter un ingrédient</a>

    <a href="{{ path('app_admin') }}" class="btn btn-secondary mb-3">Revenir à la liste des recettes</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Image</th>
                <th>Unité métrique</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ingredient in ingredients %}
                <tr>
                    <td>{{ ingredient.name }}</td>
                    <td>{{ ingredient.picture }}</td>
                    <td>{{ ingredient.metricUnit }}</td>
                    <td>
                        <a href="{{ path('admin_ingredients_edit', {'id': ingredient.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                        <form action="{{ path('admin_ingredients_delete', {'id': ingredient.id}) }}" method="post" style="display: inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet ingrédient ?')">Supprimer</button>
                        </form>
                        <a href="{{ path('admin_ingredients_view', {'id': ingredient.id}) }}" class="btn btn-sm btn-secondary">Voir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
