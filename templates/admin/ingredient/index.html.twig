{% extends 'base.html.twig' %}

{% block title %}Gérer les ingrédients
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<header class="mb-4">
			<div class="container py-3">
				<div class="row align-items-center">
					<div class="col-6">
						<h1>Gérer les ingrédients</h1>
					</div>

				</div>
			</div>
		</header>

		<div class="container">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Image</th>
						<th>Unité métrique</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for ingredient in ingredients %}
						<tr>
							<td>{{ ingredient.name }}</td>
							<td><img src="{{ asset('images/' ~ ingredient.picture) }}" alt="{{ ingredient.name }}" class="img-fluid" style="max-width: 100px;"></td>
							<td>{{ ingredient.metricUnit }}</td>
							<td class="d-flex justify-content-end">
								<a href="{{ path('admin_ingredients_view', {'id': ingredient.id}) }}" class="btn btn-sm btn-secondary">Voir</a>
								<a href="{{ path('admin_ingredients_edit', {'id': ingredient.id}) }}" class="btn btn-sm btn-primary" style="margin: 0 8px">Modifier</a>
								<form action="{{ path('admin_ingredients_delete', {'id': ingredient.id}) }}" method="post" style="display: inline;">
									<input type="hidden" name="_method" value="DELETE">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
									<button type="submit" class="btn btn-sm btn-danger bi bi-trash" style="margin-right: 8px" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet ingrédient ?')"></button>
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<button onclick="topFunction()" id="scrollTopBtn" title="Retour en haut de la page" class="btn btn-primary btn-sm" style="position: fixed; bottom: 20px; right: 20px; display: none;">Haut</button>

		<script>
			// Fonction pour confirmer la suppression d'un ingrédient
function confirmDelete(ingredientId) {
if (confirm("Êtes-vous sûr de vouloir supprimer cet ingrédient ?")) {
document.getElementById('delete-form-' + ingredientId).submit();
}
}

// Afficher ou masquer le bouton de retour en haut de la page selon le défilement
window.onscroll = function () {
scrollFunction()
};

function scrollFunction() {
var scrollTopBtn = document.getElementById("scrollTopBtn");
if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
scrollTopBtn.style.display = "block";
} else {
scrollTopBtn.style.display = "none";
}
}

// Fonction pour remonter en haut de la page lorsque le bouton est cliqué
function topFunction() {
document.body.scrollTop = 0;
document.documentElement.scrollTop = 0;
}
		</script>
	{% endblock %}
