{% extends 'base.html.twig' %}

{% block title %}Modifier la categorie{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <div class="logo text-center"> <!-- Added text-center class -->
                <img src="{{ asset('images/logo.svg') }}" alt="Logo">
            </div>
        </div>

        <div class="main">
            <div class="section">
                <h1>Modifier la categorie</h1>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">Enregistrer</button> <!-- Added button class -->
                <a href="{{ path('admin_categories_index') }}" class="btn btn-danger">Annuler</a> <!-- Added cancel button -->
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
