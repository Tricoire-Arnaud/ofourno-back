{% extends 'base.html.twig' %}

{% block title %}Modifier la categorie{% endblock %}

{% block content %}
    <div class="container-fluid">
        <header class="mb-4">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h1>Modifier la categorie</h1>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            <div class="section">
                <form action="{{ path('admin_categories_index') }}" method="post"> 
                    {{ form_widget(form) }} 
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="{{ path('admin_categories_index') }}" class="btn btn-danger">Annuler</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
