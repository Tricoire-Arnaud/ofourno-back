{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block content %}
    <h1>Détails de l'utilisateur</h1>

    <dl class="row">
        <dt class="col-sm-3">Nom :</dt>
        <dd class="col-sm-9">{{ user.username }}</dd>

        <dt class="col-sm-3">Email :</dt>
        <dd class="col-sm-9">{{ user.email }}</dd>

        <dt class="col-sm-3">Pseudo :</dt>
        <dd class="col-sm-9">{{ user.pseudo }}</dd>

        <dt class="col-sm-3">Role :</dt>
        <dd class="col-sm-9">{{ user.role }}</dd>


    </dl>

    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
    <a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a>
    <a href="{{ path('admin_users') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}
