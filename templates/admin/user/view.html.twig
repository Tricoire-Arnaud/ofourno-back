{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block content %}
    <div class="container-fluid">
        <header class="mb-4">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h1>Détails de l'utilisateur</h1>
                    </div>
                 
                </div>
            </div>
        </header>

        <div class="container">
            <div class="section">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th>Nom :</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Email :</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Pseudo :</th>
                            <td>{{ user.pseudo }}</td>
                        </tr>
                        <tr>
                            <th>Role :</th>
                            <td>
                                {% for role in user.roles %}
                                    {{ role }}<br>
                                {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
                <form id="delete-form-{{ user.id }}" action="{{ path('admin_users_delete', {'id': user.id}) }}" method="post" style="display: inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete({{ user.id }})">Supprimer</button>
                </form>
                <a href="{{ path('admin_users') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>


{% endblock %}
