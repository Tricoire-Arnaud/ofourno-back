{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block content %}
    <div class="container">
        <div class="header">
            <div class="logo text-center"> <!-- Added text-center class -->
                <img src="{{ asset('images/logo.svg') }}" alt="Logo">
            </div>
        </div>

        <div class="main">
            <div class="section">
                <h1>Modifier l'utilisateur</h1>

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('admin_users') }}" class="btn btn-danger">Annuler</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
