{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block content %}
    <div class="container-fluid">
        <header class="mb-4">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h1>Modifier l'utilisateur</h1>
                    </div>
                 
                </div>
            </div>
        </header>

        <div class="container">
            <div class="section">
                {{ form_start(form, {
                    action: path('admin_users_edit', {'id': user.id}),
                    method: 'post'
                }) }}
                     {{ form_widget(form) }}
                   
                    
                    <button type="submit" class="btn col-blue text-white fw-bold">Valider</button>
                    <a href="{{ path('admin_users') }}" class="btn col-orange text-white fw-bold">Annuler</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
