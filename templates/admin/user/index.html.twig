{% extends 'base.html.twig' %}

{% block title %}Gérer les utilisateurs{% endblock %}

{% block content %}
    <h1>Gérer les utilisateurs</h1>

    <a href="{{ path('admin_users_new') }}" class="btn btn-primary mb-3">Ajouter un utilisateur</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                        <a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
                        <a href="{{ path('admin_users_view', {'id': user.id}) }}" class="btn btn-sm btn-secondary">Voir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
