{% extends 'base.html.twig' %}

{% block title %}Gérer les utilisateurs
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <header class="mb-4">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h1>Gérer les utilisateurs</h1>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom d'utilisateur</th>
                        <th>Email</th>
                        <th>
                            Role
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    {{ role }}
                                    {% if not loop.last %},
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <form action="{{ path('admin_users_delete', {'id': user.id}) }}" method="post" style="display: inline;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                                <a href="{{ path('admin_users_view', {'id': user.id}) }}" class="btn btn-sm btn-secondary">Voir</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

     <button onclick="topFunction()" id="scrollTopBtn" title="Retour en haut de la page" class="btn btn-primary btn-sm" style="position: fixed; bottom: 20px; right: 20px; display: none;">Haut</button>

    <script>
        // Fonction pour confirmer la suppression d'un utilisateur
        function confirmDelete(userId) {
            if (confirm("Êtes-vous sûr de vouloir supprimer cet utilisateur ?")) {
                document.getElementById('delete-form-' + userId).submit();
            }
        }

        // Afficher ou masquer le bouton de retour en haut de la page selon le défilement
        window.onscroll = function () {
            scrollFunction()
        };

        function scrollFunction() {
            var scrollTopBtn = document.getElementById("scrollTopBtn");
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                scrollTopBtn.style.display = "block";
            } else {
                scrollTopBtn.style.display = "none";
            }
        }

        // Fonction pour remonter en haut de la page lorsque le bouton est cliqué
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
{% endblock %}
