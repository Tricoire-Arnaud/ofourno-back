{% extends 'base.html.twig' %}

{% block title %}Détails de l'ustensile{% endblock %}

{% block content %}
    <div class="container-fluid">
        <header class="mb-4">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h1>Détails de l'ustensile</h1>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            <div class="section">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th>Nom :</th>
                            <td>{{ ustensil.name }}</td>
                        </tr>
                        <tr>
                            <th>Image :</th>
                            <td>
                                {% if ustensil.picture is not null %}
                                    <img src="{{ asset('images/utensils/' ~ ustensil.picture) }}" alt="{{ ustensil.name }}" class="img-fluid" style="max-width: 200px;">
                                {% else %}
                                    Aucune image
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('admin_ustensils_edit', {'id': ustensil.id}) }}" class="btn btn-sm col-blue text-white fw-bold">Editer</a>
                <form id="delete-form-{{ ustensil.id }}" action="{{ path('admin_ustensils_delete', {'id': ustensil.id}) }}" method="post" style="display: inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ustensil.id) }}">
                    <button type="button" class="btn btn-sm col-red text-white bi bi-trash" onclick="confirmDelete({{ ustensil.id }})"></button>
                </form>
                <a href="{{ path('admin_ustensils_index') }}" class="btn btn-sm col-orange text-white fw-bold  ">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}
