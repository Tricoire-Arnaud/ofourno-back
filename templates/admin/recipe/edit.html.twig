{% extends 'base.html.twig' %}

{% block title %}Modifier la recette{% endblock %}

{% block body %}
    <div class="container">
        <div class="header">
            <div class="logo text-center"> <!-- Added text-center class -->
                <img src="{{ asset('images/logo.svg') }}" alt="Logo">
            </div>
        </div>

        <div class="main">
            <div class="section">
                <h1>Modifier la recette</h1>
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                <button class="btn btn-warning">{{ button_label|default('Sauvegarde') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
