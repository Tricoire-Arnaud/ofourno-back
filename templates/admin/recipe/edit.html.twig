{% extends 'base.html.twig' %}

{% block title %}
    Modifier la recette
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <header class="mb-4">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h1>Modifier la recette</h1>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            <div class="section">
                <form action="{{ path('admin_recipes_edit', {'id': recipe.id}) }}" method="post" novalidate>
                    {{ form_widget(form) }}
                    <button type="submit" class="btn col-blue text-white fw-bold">Valider</button>
                    <a href="{{ path('admin_recipes') }}" class="btn col-orange text-white fw-bold">Annuler</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
