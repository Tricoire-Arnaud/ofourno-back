<!DOCTYPE html>
<html>
<head>
	<title>Gestion O'fourn'O</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- CSS Bootstrap -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
	<!-- Icônes Bootstrap -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

	<!-- favicon -->
</head>
<body>
<div class="container">
    <header class="py-4">
        <div class="row justify-content-between align-items-center">
            <div class="col-auto">
                <img src="{{ asset('images/logo.svg') }}" alt="Logo" style="max-width: 100px;">
            </div>
            <div class="col-auto">
                {% if not app.user %}
                    <a href="{{ path('app_login') }}" class="btn btn-warning">Login</a>
                {% else %}
                    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-3">Logout</a>
                    <p class="mb-0 text-dark">Utilisateur: <strong>{{ app.user.username }}</strong></p>
                {% endif %}
			</div>
		</div>
	</header>
</div>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('admin_users') }}">Voir les utilisateur.ices</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('admin_ingredients_index') }}">Voir les ingrédients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('admin_ustensils_index') }}">Voir les ustensiles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="{{ path('admin_categories_index') }}">Voir les catégories</a>
                </li>
            </ul>
            <div class="d-flex">
                {% if app.request.attributes.get('_route') == 'admin_recipes' %}
                    <a href="{{ path('admin_recipes_new') }}" class="btn btn-success me-3">Ajouter une recette</a>
                {% elseif app.request.attributes.get('_route') == 'admin_ingredients_index' %}
                    <a href="{{ path('admin_ingredients_new') }}" class="btn btn-success me-3">Ajouter un ingrédient</a>
                {% elseif app.request.attributes.get('_route') == 'admin_ustensils_index' %}
                    <a href="{{ path('admin_ustensils_new') }}" class="btn btn-success me-3">Ajouter un ustensile</a>
                {% elseif app.request.attributes.get('_route') == 'admin_categories_index' %}
                    <a href="{{ path('admin_categories_new') }}" class="btn btn-success me-3">Ajouter une catégorie</a>
				{% elseif app.request.attributes.get('_route') == 'admin_users' %}
                    <a href="{{ path('admin_users_new') }}" class="btn btn-success me-3">Ajouter un utilisateur</a>
               
                {% endif %}
                <a href="{{ path('admin_recipes') }}" class="btn btn-primary">Retour à l'index</a>
            </div>
        </div>
    </div>
</nav>

<main>
    {% block content %}{% endblock %}
</main>

<footer class="py-4 text-center">
    <p>&copy; 2024 Gestion O'fourn'O. Tous droits réservés.</p>
</footer>

<!-- JavaScript Bundle Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-nJEQr8C2igAo7Hj3xMRRoPprluBGOufwJfAt8L3NF8xZnx1+xahoJ3w8brnE1RDz" crossorigin="anonymous"></script>
</body>
</html>
